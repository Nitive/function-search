{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "outDir": "",
    "rootDir": "./src/",
    "declaration": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6"
  },
  "include": [
    "src"
  ],
  "typeRoots": [
    "node_modules/@types/"
  ],
  "filesGlob": [
    "./src/**/*.ts"
  ]
}
